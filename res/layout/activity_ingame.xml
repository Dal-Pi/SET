<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00333333" >
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="horizontal" >
        
        <ImageView
            android:id="@+id/textGameAnswer" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/basic_triangle"
            />
        
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            
            <LinearLayout 
                android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:orientation="horizontal" >
                
                <TextView 
                android:id="@+id/textGameScore" 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="score"/>
                
                <TextView 
                android:id="@+id/textGameScoreAni" 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="#FFFF0000"
	            android:text="+ani"/>
                
            </LinearLayout>
            
            <Button 
                android:id="@+id/btnGameHint" 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="hint"
	            android:background="#FFFFFFFF"/>
        </LinearLayout>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="360dp"
        android:layout_height="360dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp" >
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >
            
            <com.kania.set.view.SetCardView
                android:id="@+id/setCard1" 
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:layout_weight="1"
	            android:layout_margin="3dp" />
            <com.kania.set.view.SetCardView
                android:id="@+id/setCard2" 
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:layout_weight="1"
	            android:layout_margin="3dp" />
            <com.kania.set.view.SetCardView
                android:id="@+id/setCard3" 
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:layout_weight="1"
	            android:layout_margin="3dp" />
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >
            
            <com.kania.set.view.SetCardView
                android:id="@+id/setCard4" 
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:layout_weight="1"
	            android:layout_margin="3dp" />
            <com.kania.set.view.SetCardView
                android:id="@+id/setCard5" 
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:layout_weight="1"
	            android:layout_margin="3dp" />
            <com.kania.set.view.SetCardView
                android:id="@+id/setCard6" 
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:layout_weight="1"
	            android:layout_margin="3dp" />
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >
            
            <com.kania.set.view.SetCardView
                android:id="@+id/setCard7" 
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:layout_weight="1"
	            android:layout_margin="3dp" />
            <com.kania.set.view.SetCardView
                android:id="@+id/setCard8" 
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:layout_weight="1"
	            android:layout_margin="3dp" />
            <com.kania.set.view.SetCardView
                android:id="@+id/setCard9" 
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:layout_weight="1"
	            android:layout_margin="3dp" />
        </LinearLayout>
        
        
    </LinearLayout>
    

</RelativeLayout>
